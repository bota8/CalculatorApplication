<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginTop="30dp"
        android:id="@+id/frameTop1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvTextView"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:textAllCaps="true"
            android:gravity="end"
            android:background="@color/material_dynamic_neutral80"
            android:textColor="@color/black"
            android:textSize="100sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/frameTop1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginTop="20dp"
        android:id="@+id/frameTop2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMinus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:id="@+id/btnPlus"
            android:text="+"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnPlus"
            app:layout_constraintEnd_toStartOf="@+id/btnMultiply"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnMinus"
            android:text="-"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMinus"
            app:layout_constraintEnd_toStartOf="@+id/btnDivision"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnMultiply"
            android:text="ร"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMultiply"
            app:layout_constraintEnd_toStartOf="@+id/btnReset"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnDivision"
            android:text="รท"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnDivision"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnReset"
            android:text="AC"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/frameTop2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.12"
        android:layout_marginTop="20dp"
        android:id="@+id/frameTop3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintEnd_toStartOf="@+id/btn9"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/frameTop3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.12"
        android:layout_marginTop="20dp"
        android:id="@+id/frameTop4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn4"
            app:layout_constraintEnd_toStartOf="@+id/btn6"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/frameTop4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.12"
        android:layout_marginTop="20dp"
        android:id="@+id/frameTop5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintEnd_toStartOf="@+id/btn3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/frameTop5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.12"
        android:layout_marginTop="20dp"
        android:id="@+id/frameTop6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnEquals"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn0"
            app:layout_constraintEnd_toStartOf="@+id/ivDelete"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnEquals"
            android:text="="
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnEquals"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_backspace"
            android:id="@+id/ivDelete"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>